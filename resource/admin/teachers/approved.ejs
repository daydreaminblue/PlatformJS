<link rel="stylesheet" href="/resources/styles/panel/course/courseList.css" />

<style>
  body {
    background-color: #2e4051 !important;
  }
  .right_side {
    position: sticky;
  }
  .left_side {
    align-items: center;
    justify-content: center;
  }
  .table__options p:nth-child(n) {
    color: white;
    text-align: center;
    flex-basis: calc(100% / 2) !important;
  }
  .table__no p:nth-child(n) {
  color: white;
  text-align: center;
  flex-basis: calc(100% / 2) !important;
}
</style>

<div style="display: flex; margin-right: 9em">
  <a href="/admin/teachers" class="btn btn-sm btn-primary"
    >مدرس های بررسی شده</a
  >
</div>

<div class="left_side" style="padding: 0">
  <div class="table" id="myTable">
    <div class="table__options">
      <p>نام درخواست کننده</p>
      <p>عملیات</p>
    </div>

    <div class="table__no__wrapper">
      <% teachers.forEach(teacher => { %>

      <div class="table__no">
        <p><%= teacher.user.name %></p>

        <div class="table__no-actions flexOne">
          <div class="buttons">
            <a href="/admin/teachers/<%= teacher._id %>" class="d-flex">
              <button type="submit" class="buttons_two">بررسی</button>
            </a>
          </div>
        </div>
      </div>

      <% }) %>
    </div>

    <%- include(viewPath('layouts/pagination') ,{ pagination : teachersAlt}) %>
  </div>
</div>
