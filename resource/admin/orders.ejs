<link rel="stylesheet" href="/resources/styles/panel/course/courseList.css" />

<style>
  body {
    background-color: #2e4051 !important;
  }
  .right_side {
    position: sticky;
  }
  .left_side {
    align-items: center;
    justify-content: center;
  }
  .table__no p:nth-child(n) {
    color: white;
    text-align: center;
    flex-basis: calc(100% / 4) !important;
  }
  .table__options p:nth-child(n) {
    color: white;
    text-align: center;
    flex-basis: calc(100% / 4) !important;
  }
</style>

<div class="left_side" style="padding: 0">
  <div class="table" id="myTable">
    <div class="table__options">
      <p>نام کاربر</p>
      <p>عنوان دوره</p>
      <p>قیمت</p>
      <p>عملیات</p>
    </div>

    <div class="table__no__wrapper">
      <% orders.forEach(order => { %>

      <div class="table__no">
        <p><%= order.user.name %></p>
        <p><%= order.course.title %></p>
        <p><%= order.course.price %></p>
        <div class="table__no-actions flexOne">
          <form
            action="/admin/orders/<%= order._id %>?_method=DELETE"
            method="post"
          >
            <div class="buttons">
              <button type="submit">رد</button>
            </div>
          </form>
        </div>
      </div>

      <% }) %>
    </div>

    <%- include(viewPath('layouts/pagination') ,{ pagination : orders}) %>
  </div>
</div>
