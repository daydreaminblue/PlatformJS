<style>
  .buttons button {
    border-radius: 0.2em;
    background: #007bff;
    color: white;
    padding: 0.6em;
    border: none;
    width: 5em;
    margin-right: 3.8em;
    font-family: sans-serif;
  }
  .buttons_one {
    border-radius: 0.2em;
    background: #dc3545 !important;
    text-decoration: none;
    color: white;
    padding: 1em;
  }
  body {
    background-color: #2e4051 !important;
  }
  .right_side {
    top: 0 !important;
  }
</style>

<script>
  function openOrCloseNav() {
    if (parseInt(document.getElementById('mySidenav').style.width) > 0) {
      document.getElementById('mySidenav').style.width = '0'
      document.getElementById('mySidenav').style.display = 'none'
      document.getElementById('myWrapper').style.justifyContent = 'center'
      document.getElementById('myWrapper').style.alignItems = 'center'
    } else {
      document.getElementById('mySidenav').style.display = 'block'
      document.getElementById('myWrapper').style.justifyContent = 'flex-start'
      document.getElementById('myWrapper').style.alignItems = 'baseline'
      document.getElementById('mySidenav').style.width = '250px'
    }
  }
</script>

<div class="left_side d-flex flex-column">
