        <p style="flex-basis: 30%">نام ارسال کننده</p>
        <p style="flex-basis: 30%">مطلب</p>
        <p style="flex-basis: 38%">عملیات</p>
      </div>

      <div class="tickets__no__wrapper">
        <% let count = 0 %> <% comments.forEach(comment => { %><% count = count
        + 1 %>
        <div class="d-flex">
          <div
            style="flex-basis: 31%"
            class="d-flex justify-content-center align-item-center"
          >
            <p><%= comment.user.name %></p>
          </div>
          <div
            style="flex-basis: 31%"
            class="d-flex justify-content-center align-item-center"
          >
            <p>
              <% if(comment.course) { %>
              <a href="<%= comment.course.path() %>"
                ><%= comment.course.title %></a
              >
              <% } else if(comment.episode) { %>
              <a href="<%= comment.episode.path() %>"
                ><%= comment.episode.title %></a
              >
              <% } %>
            </p>
          </div>
          <div style="flex-basis: 38%" class="flexOne">
            <div
              class="buttons d-flex justify-content-center align-item-center flexOne"
              style="margin-left: 3em"
            >
              <form
                action="/admin/comments/<%= comment.id %>/approved?_method=PUT"
                method="post"
                class="d-flex"
              >
                <button type="submit">تایید</button>
              </form>
              <form
                action="/admin/comments/<%= comment.id %>?_method=DELETE"
                method="post"
                class="d-flex"
              >
                <button type="submit" class="buttons_one">رد</button>
              </form>
            </div>
          </div>
        </div>

        <div class="mt-4" style="padding: 0 3em 0 3em">
          <p class="tar text-muted">متن نظر : <%= comment.comment %></p>
        </div>

        <% if(count != comments.length) {%>
        <hr />
        <% } %> <% }) %>
      </div>
      <div class="mt-0 mb-3">
        <%- include(viewPath('layouts/pagination') ,{ pagination : commentsAlt})
        %>
      </div>
    </div>
  </div>
  <% } %>
