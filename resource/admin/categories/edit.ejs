<link rel="stylesheet" href="/resources/styles/form.css" />

<div class="left_side">
  <div class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center min-vh-100">
      <div class="col-md-6 col-lg-5 col-xl-5 py-6 py-md-0">
        <div
          class="card shadow zindex-100 mb-0"
          style="
            width: 40em;
            margin-left: 34em;
            background-color: #24252a;
            box-shadow: 0 0 1.25rem #24252a;
            border: 0;
          "
        >
          <div class="card-body px-md-5 py-5">
            <div class="mb-1">
              <h6 class="h3 tar wheat">ویرایش کردن دسته</h6>
            </div>
            <div class="mb-2">
              <% let flag = false %> <% if(errors.length > 0) { %> <% flag =
              true %>
              <h6 class="h3 tar">خطا</h6>
              <p class="text-muted mb-0 tar">
                <% errors.forEach(error => { %> <%= error %><br />
                <% }) %>
              </p>
              <% } %>
            </div>
            <span class="clearfix"></span>

            <form
              class="form-horizontal"
              action="/admin/categories/<%= category.id %>?_method=put"
              method="post"
            >
              <div class="form-group">
                <label class="form-control-label wheat tar w100 mb-4"
                  >نام دسته</label
                >
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"
                      ><i data-feather="book"></i
                    ></span>
                  </div>
                  <input
                    type="text"
                    placeholder=" نام دسته را وارد کنید"
                    name="name"
                    id="name"
                    value="<%= category.name %>"
                    class="form-control form-control-muted tar"
                  />
                </div>
              </div>

              <div class="form-group">
                <label class="form-control-label wheat tar w100 mb-4"
                  >دسته مربوطه</label
                >
                <div class="input-group">
                  <select
                    class="custom-select form-control-muted"
                    name="parent"
                    id="parent"
                  >
                    <option value="none">بدون دسته</option>
                    <% categories.forEach(cate => { %> 
                      <option value="<%= cate.id %>" <%= String(old('categories' , category.parent)) == String(cate.id) ? 'selected' : '' %> ><%= cate.name %></option>

                     <% }) %>
                  </select>
                </div>
              </div>

              <div class="mt-4">
                <button type="submit" class="btn btn-block btn-primary">
                  ثبت
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
