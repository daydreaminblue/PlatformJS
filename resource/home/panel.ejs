<style>
  .fill-section-secondary {
    fill: #3752a3 !important;
  }
</style>

<body>
  <section class="slice slice-lg pt-lg-6 pb-0 pb-lg-6 bg-section-secondary">
    <!-- Container -->
    <div class="container position-relative zi-100">
      <div class="col">
        <div class="row justify-content-center">
          <div class="col-md-10 text-center">
            <div class="mt-4 mb-6">
              <h2 class="h1 text-white">پنل کاربری</h2>
            </div>
          </div>
        </div>
      </div>

      <div class="episode" style="width: 100%; min-height: 13em">
        <div class="enhanced-row" style="flex-basis: 30%">
          <div style="flex-basis: 20%">
            <div class="text-white mr-4" style="width: 4rem; height: 4rem">
              <img
                alt="lock"
                class="icon icon-shape rounded-circle text-white mr-4"
                src="/resources/images/avatar.png"
                width="39px"
                height="39px"
              />
            </div>
          </div>
          <div
            class="mr-5"
            style="
              display: flex;
              flex-direction: column;
              min-width: 20em;
              text-align: right;
            "
          >
            <p class="lead text-muted mt-2">نام کاربری : <%= user.name %></p>
            <p class="lead text-muted mt-2">ایمیل : <%= user.email %></p>
          </div>
        </div>
        <div class="flexOne d-flex flex-column" style="height: 80%">
          <div class="enhanced-row" style="flex: 1">
            <a
              href="/showComments"
              class="btn btn-primary btn-icon"
              target="_blank"
            >
              <span class="btn-inner--text">نظرات شما</span>
            </a>
            <a href="/cart" class="btn btn-danger btn-icon" target="_blank">
              <span class="btn-inner--text">سبد خرید</span>
            </a>
            <a
              href="/paid-courses"
              class="btn bg-section-secondary btn-iconn"
              target="_blank"
            >
              <span class="btn-inner--text text-white">دروس خریداری شده</span>
            </a>
          </div>
          <div class="enhanced-row flexOne d-flex justify-content-between">
            <a
              href="/likes"
              class="btn btn-primary btn-icon mr-4"
              target="_blank"
            >
              <span class="btn-inner--text">پسند ها</span>
            </a>
            <a
              href="/bookmarks"
              class="btn bg-section-secondary btn-icon"
              style="margin-left: 2.4rem"
              target="_blank"
            >
              <span class="btn-inner--text text-white">بوک مارک ها</span>
            </a>
          </div>
        </div>
      </div>
    </div>
    <!-- Teacher Req -->
    <% if(teacherStatus){ %>
    <div class="container position-relative zi-100">
      <div class="col">
        <div class="row justify-content-center">
          <div class="col-md-10 text-center">
            <div class="mt-4 mb-6">
              <h2 class="h1 text-white">درخواست مدرس شدن</h2>
            </div>
          </div>
        </div>
      </div>

      <div class="episode" style="width: 100%; min-height: 13em">
        <div class="enhanced-row">
          <div
            class="mr-5"
            style="
              display: flex;
              flex-direction: column;
              min-width: 20em;
              text-align: right;
            "
          >
            <p class="mt-2">
              شما درخواستی برای مدرس شدن ارسال کرده اید که وضعیت آن در حال حاضر
              به شرح زیر است:
            </p>
            <p class="mt-2"><%= teacherStatus %></p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% } %>
</body>
